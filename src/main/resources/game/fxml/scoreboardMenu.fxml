<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane"
        prefHeight="700.0" prefWidth="1100.0"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="game.Controller.menu.ScoreboardMenuController">
    <center>
        <ScrollPane styleClass="scroll-bar" fx:id="scrollPane">
            <VBox fx:id="listVBox">
            </VBox>
        </ScrollPane>
    </center>
    <bottom>
      <Button styleClass="button" fx:id="backButton"
              contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#backToMainMenu" text="Back" textAlignment="CENTER" BorderPane.alignment="CENTER" />
    </bottom>
</BorderPane>
