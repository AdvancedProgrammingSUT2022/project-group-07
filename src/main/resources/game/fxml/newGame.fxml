            <font>
                <Font size="25.0"/>
            </font>
        </Text>
        <Text layoutX="655.0" layoutY="59.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Players Invited"
              textAlignment="CENTER">
            <font>
                <Font size="27.0"/>
            </font>
        </Text>
        <Button fx:id="addButton" layoutX="458.0" layoutY="438.0" mnemonicParsing="false" onAction="#addPlayer"
                prefHeight="36.0" prefWidth="133.0" text="add">
            <font>
                <Font size="25.0"/>
            </font>
        </Button>
        <Button fx:id="removeButton" layoutX="935.0" layoutY="438.0" mnemonicParsing="false" onAction="#remove"
                prefHeight="47.0" prefWidth="125.0" text="remove">
            <font>
                <Font size="26.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
