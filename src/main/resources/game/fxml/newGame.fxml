    <children>
        <Button fx:id="backButton" layoutX="37.0" layoutY="626.0" mnemonicParsing="false" onAction="#goBack"
                prefHeight="49.0" prefWidth="199.0" text="Back">
            <font>
                <Font name="System Bold" size="26.0"/>
            </font>
        </Button>
        <Button fx:id="startButton" layoutX="858.0" layoutY="626.0" mnemonicParsing="false" onAction="#start"
                prefHeight="49.0" prefWidth="212.0" text="Start">
            <font>
                <Font name="System Bold" size="27.0"/>
            </font>
        </Button>
        <ListView fx:id="allPlayers" layoutX="179.0" layoutY="83.0" prefHeight="462.0" prefWidth="221.0"/>
