<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="anchorPanee" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="game.Client.View.controller.ChatControllers.CreateNewRoomController">
    <stylesheets>
        <URL value="@../css/createNewGroup.css"/>
    </stylesheets>
    <GridPane fx:id="gridPane" alignment="CENTER" layoutX="40.0" layoutY="76.0" prefHeight="240.0" prefWidth="521.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
    </GridPane>
    <HBox alignment="CENTER" prefHeight="39.0" prefWidth="600.0">
        <children>
            <Label alignment="CENTER" prefHeight="24.0" prefWidth="375.0" styleClass="font"
                   text="Choose a name for your room :" textAlignment="CENTER"/>
            <TextField fx:id="roomName" prefHeight="22.0" prefWidth="167.0"/>
        </children>
    </HBox>
    <HBox alignment="CENTER" layoutX="100.0" layoutY="324.0" prefHeight="62.0" prefWidth="400.0">
        <children>
            <Button fx:id="createBtn"
                    mnemonicParsing="false" prefHeight="50.0" prefWidth="90.0"
                    text="Create"/>
            <Button fx:id="closeBtn" mnemonicParsing="false" prefHeight="50.0" prefWidth="89.0" text="Cancel"/>
        </children>
    </HBox>
</AnchorPane>